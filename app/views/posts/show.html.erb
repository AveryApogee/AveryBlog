<% provide(:page_title, @post.title) %>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Body:</strong>
        <%= @post.body %>
      </p>
    </div>
    <div class="col-sm">
      <p>
        <strong>Description:</strong>
        <%= @post.description %>
      </p>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
