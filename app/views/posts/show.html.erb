<% provide(:page_title, @post.title) %>

<p id="notice"><%= notice %></p>

<div class="container-xl">
  <div class="row">
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>
  </div>
  <div class="row">
    <p>
      <strong>Date:</strong>
      <%= @post.description %>
    </p>
  </div>
  <div class="row">
    <div class="p-3 mb-2 bg-light text-dark">
      <p>
        <%= @post.body %>
      </p>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
